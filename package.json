{
  "name": "discord-game-club-bot",
  "version": "1.0.0",
  "description": "A Discord bot for managing monthly game book club selections",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "deploy": "npm run build && node dist/deploy-commands.js",
    "setup": "tsx src/setup.ts",
    "test-db": "tsx src/test-db.ts",
    "format": "prettier --write ./src/**/*.ts"
  },
  "keywords": [
    "discord",
    "bot",
    "game",
    "book-club"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.7",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "prettier": "^3.6.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
